<h1>Listing quotes</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Options</th>
      <th>Expires at</th>
      <th>Request</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.amount %></td>
        <td>
          <% quote.options.each do |id, option| %>
            <%= option['amount'] %>: <%= option['description'] %><br>
          <% end %>
        </td>
        <td><%= quote.expires_at %></td>
        <td><%= quote.request %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>
