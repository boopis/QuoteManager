<div class="col-sm-4 col-sm-offset-4 signin">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, 
                      url: registration_path(resource_name),
                      wrapper_mappings: { boolean: :vertical_boolean } ) do |f| %>
    <%= devise_error_messages! %>

    <%= f.input :email, label: false do %>
      <div class="input-group">
        <span class="input-group-addon glyphicon glyphicon-user"></span>
        <%= f.input_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>
    <% end %>

    <%= f.input :password, label: false do %>
      <div class="input-group">
        <span class="input-group-addon glyphicon glyphicon-lock"></span>
        <%= f.input_field :password, class: 'form-control', placeholder: 'Password' %>
      </div>
    <% end %>

    <%= f.input :password_confirmation, label: false do %>
      <div class="input-group">
        <span class="input-group-addon glyphicon glyphicon-ok"></span>
        <%= f.input_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
      </div>
    <% end %>

    <%= f.button :submit, "Sign up", class: 'btn btn-theme btn-block' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>