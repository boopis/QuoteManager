<div class="col-sm-4 col-sm-offset-4 signin">

<h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, 
                      url: password_path(resource_name),
                      html: { method: :post },
                      wrapper_mappings: { boolean: :vertical_boolean } ) do |f| %>

  <%= devise_error_messages! %>
    <%= f.input :email, label: false do %>
      <div class="input-group">
        <span class="input-group-addon glyphicon glyphicon-lock"></span>
        <%= f.input_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>
    <% end %>
    <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-theme btn-block' %>
  <% end %>

<%= render "devise/shared/links" %>
</div>