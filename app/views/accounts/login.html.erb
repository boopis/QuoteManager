<div class="col-md-4 col-md-offset-4 well signin">
  <h2>Sign in</h2>

<%= simple_form_for :user, { url: login_path } do |f| %>  
  <%= f.input :subdomain %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.button :submit, "Sign In" %>
<% end %>

<%= render "devise/shared/links" %>

</div>