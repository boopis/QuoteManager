<div class="form-field">
<h3>Check Box Field</h3>
<fieldset>
  <%= f.hidden_field :type, value: 'check_box' %>
  <div class="field">
    <%= f.label :label %><br />
    <%= f.text_field :label %>
  </div>
  <div class="field">
    <%= f.label :required %><br />
    <%= f.select :required, [['', false], ['required', true] ] %>
  </div>
  <div class="field">
    <%= f.label :css %><br />
    <%= f.text_area :css %>
  </div>

  <div class="option-fields">
    <% if defined? options %>
      <% options.each do |option| %>
        <%= f.fields_for :options, OpenStruct.new(option), index: "" do |builder| %>
          <%= render 'option', f: builder %>
        <% end %>
      <% end %>
    <% end %>
    <%= link_to_add_options "option", f, :options %><br>
  </div>
  <div class="remove">
    <%= link_to '[remove]', '#', class: 'remove_fields' %>
  <div>
</fieldset>
</div>