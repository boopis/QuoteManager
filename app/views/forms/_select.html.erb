<div class="form-field">
  <%= f.hidden_field :type, value: 'select' %>

  <div class="form-group">
    <%= f.label :label, class: "sr-only" %>
    <div class="input-group">
      <span class="input-group-addon">
        <i class="fa fa-bars"></i>
      </span>
      <%= f.text_field :label, class: "form-control", placeholder: "Select Group Name" %>
    </div>
    <div class="rr">
      <%= f.check_box "validate[required]" %> <%= f.label 'required?' %>
      <%= link_to '#', class: 'remove_fields' do %>
        <%= content_tag(:i, "remove", class: "fa fa-minus-circle") %>
      <% end %>
    </div>
  </div>

  <div class="option-fields">
    <% if defined? options %>
      <% options.each do |option| %>
        <%= f.fields_for :options, OpenStruct.new(option), index: "" do |builder| %>
          <%= render 'option', f: builder %>
        <% end %>
      <% end %>
    <% end %>
    <%= link_to_add_options "option", f, :options %><br>
  </div>

</div>
