<%= content_tag(:div, :class => 'form-field', :'data-id' => id) do %>
  <% if defined? field %>
    <%= render 'hidden_option', f: f, field: field, type: 'text' %>
  <% else %>
    <%= render 'hidden_option', f: f, field: {}, type: 'text' %>
  <% end %>

  <div class="form-group">
    <%= f.label :label, class: "sr-only" %>
    <div class="input-group">
      <span class="input-group-addon">
        <i class="fa fa-pencil"></i>
      </span>
      <%= f.text_field :label, class: "form-control", placeholder: "Text Field Name" %>
    </div>
    <div class="rr">
      <%= link_to '#', class: 'remove_fields' do %>
        <%= content_tag(:i, "remove", class: "fa fa-minus-circle") %>
      <% end %>
    </div>
  </div>

<% end %>
