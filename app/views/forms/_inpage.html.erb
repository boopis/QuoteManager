<div class="form-field">
  <%= f.hidden_field :type, value: 'inpage' %>

  <div class="form-group">
    <%= f.label :label, class: "sr-only" %>
    <div class="input-group">
      <span class="input-group-addon">
        <i class="fa fa-tag"></i>
      </span>
      <%= f.text_field :label, class: "form-control", placeholder: "In-Page field name" %>
      <%= f.text_field :id_class, class: "form-control", placeholder: "Product option / id / class" %>
    </div>
    <div class="rr">
      <% if defined?(required) && required == '1'%>
        <%= f.check_box("validate[validates_presence_of]", :checked => 'checked') %> 
      <% else %>
        <%= f.check_box("validate[validates_presence_of]") %> 
      <% end %>
      <%= f.label 'required?' %>

      <%= link_to '#', class: 'remove_fields' do %>
        <%= content_tag(:i, "remove", class: "fa fa-minus-circle") %>
      <% end %>
    </div>
  </div>

</div>
