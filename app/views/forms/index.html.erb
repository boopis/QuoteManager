<% @forms.each_slice(3) do |row| %>
  <div class="col-lg-12">
    <div class="row">
      <% row.each do |form| %>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="main-box infographic-box">

            <span class="name"><%= form.name %></span>
            <ul class="fa-ul">
              <% form.fields.each do |id, field| %>
                <% case field['type'] %>
                  <% when 'text' %>
                    <li><span class="fa-li fa fa-pencil"></span><%= field['label'] %></li>
                  <% when 'paragraph' %>
                    <li><span class="fa-li fa fa-edit"></span><%= field['label'] %></li>
                  <% when 'email' %>
                    <li><span class="fa-li fa fa-envelope"></span><%= field['label'] %></li>
                  <% when 'radio' %>
                    <% if field['options'] %> 
                      <li><span class="fa-li fa fa fa-check-circle"></span><%= field['label'] %></li>
                      <% field['options'].each do |option| %>
                        <li class="buffer left-10"><span class="fa-li fa fa-check-circle-o"></span><%= option['name'] %></li>
                      <% end %>
                    <% end %>
                  <% when 'select' %>
                    <li><span class="fa-li fa fa-bars"></span><%= field['label'] %></li>
                    <% if field['options'] %> 
                      <% field['options'].each do |option| %>
                        <li class="buffer left-10"><span class="fa-li fa fa-minus"></span><%= option['name'] %></li>
                      <% end %>
                    <% end %>
                  <% when 'check_box' %>
                    <li><span class="fa-li fa fa-check-square"></span><%= field['label'] %></li>
                    <% if field['options'] %> 
                      <% field['options'].each do |option| %>
                        <li class="buffer left-10"><span class="fa-li fa fa-check-square-o"></span><%= option['name'] %></li>
                      <% end %>
                    <% end %>
                <% end %>
              <% end %>
            </ul>

            <div class="row buffer top-20 bottom-10">
              <div class="col-md-4">
                <%= link_to form, title: "Show Form", class: "nounderline" do %>
                  <i class="fa fa-search-plus red"></i>
                <% end %>
              </div>
              <div class="col-md-4">
                <%= link_to edit_form_path(form), title: "Edit Form", class: "nounderline" do %>
                  <i class="fa fa-pencil blue"></i>
                <% end %>
              </div>
              <div class="col-md-4">
                <%= link_to requests_path(form_id: form.id), title: "Requests", class: "nounderline" do %>
                  <i class="fa fa-reply green"></i>
                <% end %>
              </div>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
