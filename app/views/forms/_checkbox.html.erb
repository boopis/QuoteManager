<%= content_tag(:div, :class => 'form-field', :'data-id' => id) do %>
  <% if defined? field %>
    <%= render 'hidden_option', f: f, field: field, type: 'checkbox' %>
  <% else %>
    <%= render 'hidden_option', f: f, field: {}, type: 'checkbox' %>
  <% end %>

  <div class="form-group">
    <% if defined? field %>
      <%= f.label field['label'], :class => "#{field['validate']['validates_presence_of'] == '1' ? 'required' : ''}" %>
    <% else %>
      <%= f.label '' %>
    <% end %>
    <div class="input-group">
      <% if defined? options %>
        <% JSON.parse(options).each do |option| %>
          <div class='clearfix'></div>
          <%= check_box_tag option.keys[0], option.values[0], false %>
          <%= content_tag :span," " + option.values[0] %>
        <% end %>
      <% end %>
    </div>
    <%= render 'forms/remove' %>
  </div>

<% end %>
